        '#title' => '',
        '#tree' => TRUE, // Don't forget to set #tree!
        '#prefix' => $HTMLform_groupbox_hdr, // This is our wrapper div.
        '#suffix' => $HTMLform_groupbox_ftr,
    );

    $form['topic']['info'] ['subject'] = array(
