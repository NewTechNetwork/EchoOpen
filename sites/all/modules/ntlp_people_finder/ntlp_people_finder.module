function ntlp_people_finder_block( $op = 'list', $delta = 0, $edit = array()  ) {
    switch( $op ) {
        case 'list':
            $blocks[0] = array(
                    'info' => t('NTLP: People Finder Filter'),
            );
            return $blocks;
        case 'view':
            switch( $delta ) {
                case 0:
                    $block['subject'] = t('NTLP: People Finder Filter');
                    $block['content'] = ntlp_people_finder_filter();
            }
            return $block;
    }
}

function info() {

    $find = array();

