    } else {
        $args[] = $terms;
    }
    $args[] = 'all'; // Teacher reflection param
    $args[] = isset($_GET['exp']) ? 1 : 'all';

    $view->get_total_rows = TRUE;

    $view = views_get_view('ntlp_library_projects');
    $content = $view->preview('default', $args);

